!!!(lang="ja", prefix="og: http://ogp.me/ns# fb: http://www.facebook.com/2008/fbml")
%html


  -# head
  %head
    %meta(charset="UTF-8")
    %title LoveLiveLog
    %meta(name="description" content="My Personal LoveLive! Log")
    %meta(name="viewport" content="width=device-width, maximum-scale=1.0")

    -# OGP
    -# Twitter Meta

    = favicon_tag "images/favicon.ico"
    = stylesheet_link_tag "style"
    %meta(rel="apple-touch-icon-precomposed" href="apple-touch-icon.png")

    -# Java Script
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    %script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js")
    %script(src="//cdnjs.cloudflare.com/ajax/libs/jquery.transit/0.9.9/jquery.transit.min.js")
    %script(src="//ryo-lovelive.tumblr.com/api/read/json?num=50&amp;type=photo")
    %script(src="javascripts/tumblr_background_imager.js")
    = javascript_include_tag "lovelivelog"


    /[if lt IE 9]
      %script(src="//html5shiv.googlecode.com/svn/trunk/html5.js")
      %script(src="//ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js")
      %script(src="//css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js")


  -# body
  %body
    -# main
    %div#main
      %h1#site-logo<
        %img(src="images/logo-01.svg" alt="LoveLive!")

      -#
        stripe
        reference: https://twitter.com/kisalantis/status/81511663802662912
      %div.stripe
        %div.honoka
        %div.eri
        %div.kotori
        %div.umi
        %div.rin
        %div.maki
        %div.nozomi
        %div.hanayo
        %div.niko

      -# arrow
      #gobottom<
        %img(src="images/gobottom.svg" alt="")

    -# navigation
    %header#header(role="banner")
      %nav#nav(role="navigation")
        %ul.inner
          %li<
            %a(href="#music") music
          %li<
            %a(href="#video") video
          %li<
            %a(href="#book") book
          %li<
            %a(href="#figure") figure
          %li<
            %a(href="#other") other

    -# content
    %div#content
      %div.inner
        = yield

    -# footer
    %footer#footer(role="contentinfo")
      %div#backtop
        %img(src="images/kotori-taso.png" alt="" width="100" height="100")
      %div.inner
        footer
      %div.stripe
        %div.honoka
        %div.eri
        %div.kotori
        %div.umi
        %div.rin
        %div.maki
        %div.nozomi
        %div.hanayo
        %div.niko